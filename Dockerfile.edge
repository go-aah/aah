# aah framework - Docker Edge build file

FROM golang:latest
LABEL maintainer="Jeevanandam M. <jeeva@myjeeva.com>"

RUN go version

RUN apt-get update

RUN rm -rf $GOPATH/src

RUN go get -u aahframework.org/tools.v0/aah && \
    go get -u github.com/aah-cb/minify

RUN aah switch && \
    aah switch --refresh

RUN aah --version

WORKDIR $GOPATH/src
